
        <%- include('../includes/head.ejs') %>
        <link rel="stylesheet" href="/css/cart.css">
    
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <ul class="cart__item-list">
                <% cartProducts.forEach(item => { %>
                    <li class="cart__item">
                        <h1><%=item.productId.title%> </h1>
                        <h2>Quantity : <%= item.quantity %></h2>
                    <input name="_csrf" type="hidden" value="<%= csrfToken%>" />
                    </li>
                <% }) %>
            </ul>
            <div class="centered">
                <h3>Price: <%= price%></h3>  
      
                <form action="/create-order" method="POST">
                    <script
                      src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                      data-key="pk_test_51HY3b4KX98xGsa2HzYppnUSJru05YKVBqBTe74C4Ef49qo5MtOngNweOCMwjgTiDG4d1RGCfShHT378wrDeOXVc800jwvWHWHz"
                      data-amount="<%= price* 100 %>"
                      data-name="Your Order"
                      data-description="All the items you ordewred"
                      data-image="https://stripe.com/img/documentation/checkout/marketplace.png"
                      data-locale="auto"
                      data-currency="usd">
                    </script>
                  </form> 

            </div>
        </main>
        <%- include('../includes/end.ejs') %>
