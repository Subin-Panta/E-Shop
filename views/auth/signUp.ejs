<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/auth.css">
<link rel="stylesheet" href="/css/forms.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (errorMessage) {%>
        
            <div class="user-message user-message--error"><%= errorMessage.map(item=> item.msg) %></div>
        <%}%>
        <form class="login-form" action="/signup" method="POST" novalidate>
            <div class="form-control">
                <label for="email">E-mail</label>
                <input 
                class="<%= errorMessage && errorMessage.find(e=> e.param==='email')? 'invalid': null%>"
                type="email" name="email" id="email"   value="<%=oldInput.email%>">
            </div>
            <div class="form-control">
                <label for="password">Password</label>
                <input class="<%= errorMessage && errorMessage.find(e=> e.param==='password')? 'invalid': null%>" type="password" name="password" id="password" value="<%=oldInput.password%>">
            </div>
            <div class="form-control">
                <label for="confirmPassword">Confirm Password</label>
                <input class="<%= errorMessage && errorMessage.find(e=> e.param==='confirmPassword')? 'invalid': null%>"  type="password" name="confirmPassword" id="confirmPassword">
            </div>
     
            <input name="_csrf" type="hidden" value="<%= csrfToken%>" />
            <button class="btn" type="submit">Sign Up</button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>