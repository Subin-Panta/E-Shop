<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/auth.css">
<link rel="stylesheet" href="/css/forms.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (errorMessage) {%>
        
            <div class="user-message user-message--error"><%= errorMessage.map(item=> item.msg) %></div>
        <%}%>
        <form class="login-form" action="/login" method="POST" novalidate>
            <div class="form-control">
                <label for="email">E-mail</label>
                <input class="<%= errorMessage && errorMessage.find(e=> e.param==='email')? 'invalid': null%>" type="email" name="email" id="email"  value='<%=oldInput.email%>'>
            </div>
            <div class="form-control">
                <label for="password">Password</label>
                <input class="<%= errorMessage? 'invalid': null%>" type="password" name="password" id="password">
            </div>
     
            <input name="_csrf" type="hidden" value="<%= csrfToken%>" />
            <button class="btn" type="submit">Login</button>
        </form>
        <div class="centered">
            <a href='/reset'>Forgot Your Password?</a>
        </div>
    </main>
<%- include('../includes/end.ejs') %>